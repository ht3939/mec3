{% extends 'default_frame.twig' %}

{% set body_class = 'front_page' %}

{% block javascript %}
<script>
$(function(){
    $('.main_visual').slick({
        dots: true,
        arrows: false,
        autoplay: true,
        speed: 300
    });
});
</script>
{% endblock %}

{% block stylesheet %}
<style type="text/css">
/* ======== PC ==========*/
.pc.mainv-section {
    background: #d9051c center no-repeat;
/*    height: 360px;*/
    vertical-align: bottom;

    margin-top: -30px;
}
.pc.mainv-section ._container {
    overflow: hidden;
/*    height: 100%;*/
    margin: 0 auto;
}
.pc.mainv-section ._container .mainv-text {
    float: bottom;
    /*width: 100%;*/
/*    height: 445px;*/
    padding-top: 0px;
    margin-left: 0px;
    margin-top:0px;
    margin-bottom:0px;
}

/* ======== SP ==========*/
 .sp.mainv-section {
     background: url({{ app.config.front_urlpath }}/img/sp/top/main_sp.png) #d9051c center no-repeat;
     background-size: 100%;
 }
 .sp.mainv-section .mainv-bg-left {
     position: relative;
     width: 100%;
     background: url({{ app.config.front_urlpath }}/img/sp/top/mainv-bg-left.png) no-repeat top left;
     background-size: 100%;
 }
 .sp.mainv-section .mainv-bg-left .mainv-bg-right {
     position: relative;
     width: 100%;
     background: url({{ app.config.front_urlpath }}/img/sp/top/mainv-bg-right.png) no-repeat top right;
     background-size: 100%;
 }


.sp ._container {
    width: 320px;
    margin: 0 auto;
     background: #d9051c center no-repeat;
}
.sp.mainv-section .mainv-bg-left .mainv-bg-right ._container .mainv-text {
    width: 240px;
    margin: 0 auto;
    padding: 30px 0 43px;
}

</style>
{% endblock %}

{% block main %}

<div class="row">
    <div class="col-sm-12">

		<div class="mainv-section sp">
            <img class="_img-w" src="{{ app.config.front_urlpath }}/img/sp/top/main_sp.png" alt="スマホ販売・比較総合サイト">
		</div>

		<div class="mainv-section pc">
			<div class="_container">
				<h1 class="mainv-text"><img class="" src="{{ app.config.front_urlpath }}/img/top/mainv-pc.png" alt="モバレコバリューストアは、安くお得にスマホ・格安SIMが買える通販サイトです。どこよりも安い、最安商品を多く取り揃えていますので、スマホ・格安SIMを買うなら当サイトをチェックしてみてください"></h1>
			</div>
		</div>

    </div>
</div>

{% endblock %}