{% block stylesheet %}
<style type="text/css">
#navi {
    background: #ce0b20;
}
#navi .inner {
    position: relative;
/*    width: 1000px;
    margin: 0 auto;*/
}

#navi .inner ul{
    text-align: center;
    width: 100%;
    display: table!important;
    table-layout: fixed;
}
#navi .inner ul li{
    display: table-cell;
}
#genaral-page-header .inner, #navi .navi-box, #genaral-page-footer .inner {
    overflow: hidden;
}
#navi .navi-list:last-child {
    border-right: none;
}
#navi .navi-list {
/*    float: left;*/
    border-right: 1px dotted #fff;
    text-align: center;
}
#navi .navi-list a.nav-pagelink-btn {
/*    width: 190px;*/
    min-height: 26px;
    padding: 12px 0;
}
#navi .navi-list.active a {
    background: #b71022;
}
#navi .navi-list a {
    display: block;
}

#category{
    padding:0px!important;
    background: #ce0b20;
}
#category ul{
    display: table!important;
    width: 100%!important;
}
#category li:last-child {
    border-right: none;
}
#category li {
    border-right: 1px dotted #fff;
    text-align: center;
    display:table-cell!important;
}
#category li a {
    min-height: 26px;
    color:#fff;
    font-weight: normal;
}
#category ul li ul li{
    background: #ce0b20;
}


/* ====================== SP ====================== */
#drawer.sp ul{
    background: #ce0b20;
    margin-bottom: 0px;
}
#drawer.sp ul li{
    display:inline;
}
#drawer.sp ul li a{
    color:#fff;
    font-weight:normal;
}
#drawer.sp ul li a img{
    margin: 13px 0px;
}

</style>
