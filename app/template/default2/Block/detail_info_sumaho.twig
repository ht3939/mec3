    box-sizing: border-box;
    width: 33.33%;
    vertical-align: middle;
    border-left: 1px solid #ccc;
}
.item-inf .tab-list a {
    display: table-cell;
    height: 50px;
    text-align: center;
    vertical-align: middle;
    font-size: 1rem;
    font-weight: bold;
    text-decoration: none;
    color: #333;
