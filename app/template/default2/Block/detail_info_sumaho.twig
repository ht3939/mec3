{% block stylesheet %}
<style type="text/css">
/* ======== PC ==========*/
#item-dtl-tab {
	width: 1000px;
	margin-bottom: 30px;
	overflow: hidden;
}
#item-dtl-tab>ul {
	overflow: hidden;
	height: 50px;
	width: 1010px;
	margin-right: -10px;
	background: url({{ app.config.front_urlpath }}/img/product/bd-item-dtl-tab.gif) repeat-x 0 bottom;
}
#item-dtl-tab>ul li.active, #item-dtl-tab>ul li:hover {
	border-top: 2px solid #444;
	border-left: 2px solid #444;
	border-right: 2px solid #444;
	margin-top: 0;
	padding-top: 3px;
	height: 52px;
	line-height: 52px;
	width: 330px;
	color: #232f3e;
	background: #fff;
}
#item-dtl-tab>ul li {
	float: left;
	width: 330px;
	margin-top: 5px;
	margin-right: 5px;
	height: 43px;
	line-height: 43px;
	font-size: 16px;
	font-weight: bold;
	text-align: center;
	color: #fff;
	background: #444;
	-webkit-border-radius: 4px 4px 0 0;
	-moz-border-radius: 4px 4px 0 0;
	border-radius: 4px 4px 0 0;
	border-bottom: 2px solid #444;
	cursor: pointer;
}
.item-dtl-tab-cont {
	width: 1000px;
	display: none;
	background: #fff;
	margin-bottom: 20px;
}
.item-dtl-tab-cont>h2 {
	border-top: 5px solid #333;
	border-bottom: 1px solid #ccc;
	padding: 15px 20px;
	font-size: 22px;
	font-weight: bold;
	color: #232f3e;
	line-height: 1;
	margin-bottom: 45px;
}
.item-dtl-tab-cont .item-dtl-summary {
	width: 830px;
	margin: 0 auto;
	padding-bottom: 80px;
	overflow: hidden;
}
.item-dtl-tab-cont .item-dtl-summary .summary-img {
	float: right;
	margin-left: 45px;
}
.item-dtl-tab-cont .item-dtl-summary h3 {
	font-size: 26px;
	font-weight: bold;
	padding-top: 20px;
	margin-bottom: 15px;
}
.item-dtl-tab-cont .item-dtl-summary .summary-text {
	font-size: 14px;
	line-height: 1.7;
}
.item-dtl-tab-cont .item-dtl-spec {
	width: 860px;
	margin: 0 auto;
	padding-bottom: 30px;
}
.item-dtl-tab-cont .item-dtl-spec h3 {
	padding: 10px 15px;
	background: #ccc;
	color: #232f3e;
	font-size: 16px;
	font-weight: bold;
	margin-bottom: 20px;
}
.item-dtl-tab-cont .item-dtl-spec table {
	width: 100%;
	margin-top: 20px;
	font-size: 12px;
}
.item-dtl-tab-cont .item-dtl-spec table th {
	width: 165px;
	background: #f5f5f5;
	font-weight: normal;
}
.item-dtl-tab-cont .item-dtl-spec table th, .item-dtl-tab-cont .item-dtl-spec table td {
	border: 1px solid #e8e8e8;
	padding: 12px;
}
.item-dtl-tab-cont .item-dtl-spec table th, .item-dtl-tab-cont .item-dtl-spec table td {
	border: 1px solid #e8e8e8;
	padding: 12px;
}
/* ======== /PC ==========*/

/* ======== SP ==========*/
.item-inf .tab-list {
    overflow: hidden;
    border-top: 1px solid #ccc;
}
.item-inf .tab-list li:first-child {
    border-left: none;
}
.item-inf .tab-list li {
    float: left;
    display: table;
    box-sizing: border-box;
    width: 33.33%;
    vertical-align: middle;
    border-left: 1px solid #ccc;
}
.item-inf .tab-list a {
    display: table-cell;
    height: 50px;
    text-align: center;
    vertical-align: middle;
    font-size: 1rem;
    font-weight: bold;
    text-decoration: none;
    color: #333;
}
.item-inf .inf-content {
    padding: 0 10px;
    border-top: 2px solid #ccc;
}
.item-inf .inf-content h2 {
    padding: 10px 0;
    font-size: 1.5rem;
    font-weight: bold;
    border-bottom: 1px solid #ccc;
    margin-bottom: 10px;
}
.item-inf #info li {
    padding-bottom: 25px;
    font-size: 1.1rem;
}
.item-inf #info li .image {
    margin-bottom: 18px;
}
.item-inf #info li p {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 10px;
}
.item-inf #info li .image img {
    width: 100%;
    height: auto;
}
.item-inf #plan, .item-inf #spec {
    padding-bottom: 20px;
}
.item-inf #plan table, .item-inf #spec table {
    width: 100%;
    margin-bottom: 15px;
}
.item-inf #plan caption, .item-inf #spec caption {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 4px;
}
.item-inf #plan th, .item-inf #spec th {
    background: #f7f7f7;
    font-weight: bold;
    width: 33%;
}
.item-inf #plan th, .item-inf #plan td, .item-inf #spec th, .item-inf #spec td {
    border: 1px solid #ccc;
    padding: 8px 5px;
    font-size: 1rem;
}
.item-inf #plan th, .item-inf #plan td, .item-inf #spec th, .item-inf #spec td {
    border: 1px solid #ccc;
    padding: 8px 5px;
    font-size: 1rem;
}


/* ======== /SP ==========*/


</style>
