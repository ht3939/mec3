{% block stylesheet %}
<style type="text/css">
#pickupitem .heading{
  background: #f8f8f8;
  padding: 16px;
}


#item_list.recommend .item_name{
    color: #525263;
    margin: 0 0 8px;
    font-weight:bold;
    height: 60px;
}
#item_list.recommend .item_name span {
    height: 15px;
    font-size: 11px;
    display: block;
    font-weight: normal;
    margin-bottom: 5px;
}
#item_list.recommend .tag-list{
    display: block;
    height: 26px;
}
#item_list.recommend .tag-list li{
    font-size:11px;
}
#item_list.recommend .item_price{
    font-size:13px;
    margin: 8px 0px;
    font-weight:normal;
}
#item_list.recommend .item_price .price-num {
    color: #ed0505;
    font-size: 20px;
    font-weight: bold;
    font-family: Helvetica, Arial, sans-serif;
}
</style>
{% endblock %}



<!-- ▼item_list▼ -->
<div id="pickupitem" >
    <h2 class="heading">スマホマニアのおすすめ商品</h2>

<div id="item_list" class="recommend">
    <div class="row">
        {% for RecommendProduct in RecommendProducts.ProductList %}
            <div class="col-sm-3 col-xs-6">
                <div class="pickup_item">
                    <a href="{{ url('product_detail', {'id': RecommendProduct.Product.id}) }}">
                        <div class="item_photo"><img src="{{ app.config.image_save_urlpath }}/{{ RecommendProduct.Product.mainFileName|no_image_product }}"></div>
                        <p class="item_comment">{{ RecommendProduct.comment|raw }}</p>

                        <dl>
                            <dt class="item_name">
                                <span>{{ RecommendProducts.__EX_PRODUCT_LIST_MAKER[RecommendProduct.Product.id].name }}</span>
                                {{ RecommendProduct.Product.name }}
                            </dt>

                            <ul class="tag-list">
                            {% for ProductTag in RecommendProduct.Product.ProductTag %}
                                <li id="product_tag_box__product_tag--{{ ProductTag.Tag.id }}" class="product_tag_list">{{ ProductTag.Tag.name }}</li>
                            {% endfor %}
                            </ul>
                             {% if RecommendProduct.Product.ProductClasses.0.ProductType.id　==　app.config.producttype_ex_sim_type %}
                            <dd class="item_price">
                                初期費用 <span class="price-num">{{ RecommendProduct.__EX_PRODUCT_LIST[RecommendRankingProduct.Product.id][app.config.product_ex_s_init_price].value|number_format }}円</span> (税抜)
                            </dd>
                            <dd class="item_price">
                                月額 <span class="price-num">{{ RecommendProduct.Product.getPrice02Min|number_format }}円/月</span> (税抜)
                            </dd>
                            {% else %}
                            <dd class="item_price">
                                月々 <span class="price-num">{{ RecommendProduct.Product.getPrice02Min|number_format }}円</span> (税抜) 
                                {{RecommendProduct.Product.ProductClasses.0.CategoryClass2.name}} 分割24回
                            </dd>
                            {% endif %}

                        </dl>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- ▲item_list▲ -->
</div>

