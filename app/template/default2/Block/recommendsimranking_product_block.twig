{% block stylesheet %}
<style type="text/css">
#pickupitem .heading{
  background: #f8f8f8;
  padding: 16px;
}

#item_list.recommend_sim .item_name{
    color: #525263;
    margin: 0 0 8px;
    font-weight:bold;
}
#item_list.recommend_sim .item_name span {
    height: 15px;
    font-size: 11px;
    display: block;
    font-weight: normal;
    margin-bottom: 5px;
}
#item_list.recommend_sim .tag-list{
    display: block;
    height: 26px;
}
#item_list.recommend_sim .tag-list li{
    font-size:11px;
}
#item_list.recommend_sim .item_price{
    font-size:13px;
    margin: 8px 0px;
    font-weight:normal;
}
#item_list.recommend_sim .item_price .price-num {
    color: #ed0505;
    font-size: 20px;
    font-weight: bold;
    font-family: Helvetica, Arial, sans-serif;
}
</style>
{% endblock %}

<div id="pickupitem" >
    <h2 class="heading">SIMおすすめ商品ランキング</h2>

<!-- ▼item_list▼ -->
<div id="item_list" class="recommend_sim">
    <div class="row">
        {% for RecommendRankingProduct in RecommendSimRanking.ProductList %}
            <div class="col-sm-3 col-xs-6">
                <div class="pickup_item">
                    <a href="{{ url('product_detail', {'id': RecommendRankingProduct.Product.id}) }}">
                        <div class="item_photo"><img src="{{ app.config.image_save_urlpath }}/{{ RecommendRankingProduct.Product.mainFileName|no_image_product }}"></div>
                        <p class="item_comment">{{ RecommendRankingProduct.comment|raw }}</p>

                        <dl>
                            <dt class="item_name">
                                <span>{{ RecommendSimRanking.__EX_PRODUCT_LIST_MAKER[RecommendRankingProduct.Product.id].name }}</span>
                                {{ RecommendRankingProduct.Product.name }}
                            </dt>

                            <ul class="tag-list">
                            {% for ProductTag in RecommendRankingProduct.Product.ProductTag %}
                                <li id="product_tag_box__product_tag--{{ ProductTag.Tag.id }}" class="product_tag_list">{{ ProductTag.Tag.name }}</li>
                            {% endfor %}
                            </ul>


                            {% set product_type = RecommendRankingProduct.Product.ProductClasses.0.ProductType.id %}

                            {% if product_type in app.config.producttype_ex_initinfo_type_grp %}

                            <dd class="item_price">
                                初期費用 <span class="price-num">{{ RecommendSimRanking.__EX_PRODUCT_LIST[RecommendRankingProduct.Product.id][app.config.product_ex_s_init_price].value|number_format }}円</span> (税抜)
                            </dd>
                            {% endif %}
                            <dd class="item_price">
                                {{ app.config.producttype_ex_monthly_type_grp_disp.front[product_type] }} <span class="price-num">{{ RecommendRankingProduct.Product.getPrice02Min|number_format }}円</span> {% if product_type == app.config.producttype_ex_sp_type %}(税抜)<br>{{ app.config.producttype_ex_monthly_type_grp_disp.back[product_type] }}{% else %}{{ app.config.producttype_ex_monthly_type_grp_disp.back[product_type] }}(税抜){% endif %}
                            </dd>
                        </dl>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- ▲item_list▲ -->
</div>