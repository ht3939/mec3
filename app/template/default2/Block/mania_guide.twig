{% block stylesheet %}
<style type="text/css">
/* ======== PC ==========*/
.guide-sectio-box{margin:40px 0 80px}.guide-sectio-box .guide-info-heading{color:#da0d0d;font-size:18px;font-weight:bold;border-bottom:1px solid #ddd;padding:0 0 10px 0;margin-bottom:20px}.guide-sectio-box .text{line-height:1.8}.guide-sectio-box .guide-table{width:100%;margin:20px 0 10px}.guide-sectio-box .guide-table th,.guide-sectio-box .guide-table td{padding:20px;border:1px solid #ddd}.guide-sectio-box .guide-table th img,.guide-sectio-box .guide-table td img{margin-top:10px}.guide-sectio-box .guide-table th{width:190px;background-color:#f6f6f6}.guide-sectio-box .text-part1{font-size:10px;color:#999;text-indent:-1em;margin-left:10px}


.subpage-heading {
    position: relative;
    margin-bottom: 25px;
    padding: 12px 10px 12px 28px;
    border-radius: 4px;
    background-color: #f1f1f1;
    box-shadow: 0 1px 2px 1px #ccc;
    font-size: 18px;
    font-weight: bold;
}
.subpage-heading:before {
    content: '';
    position: absolute;
    margin: 6px 0;
    top: 0;
    bottom: 0;
    left: 8px;
    right: 0;
    width: 8px;
    max-height: 100%;
    background-color: #da0d0d;
    border-radius: 3px 0 0 3px;
}

#contents{
	padding-top:0px;
}
#breadcrumbs.bg-grey {
    background: #f4f4f4;
}
#breadcrumbs {
    margin-bottom: 0;
    margin-top: 0px;
}
#breadcrumbs .parent {
    overflow: hidden;
    display: block;
    width: 1000px;
    margin: 0 auto;
    padding: 11px 0;
    color: #666;
}
#breadcrumbs .children {
    float: left;
    font-size: 10px;
    position: relative;
}
#breadcrumbs a {
    color: #666;
    margin-right: 20px;
}
#breadcrumbs a:after {
    content: ">";
    position: absolute;
    top: -1px;
    right: 5px;
}
/* ======== /PC ==========*/

/* ======== SP ==========*/
#contents {
    padding-bottom: 40px;
    line-height: 1.6;
}
.page-heading {
    display: block;
    position: relative;
    padding: 10px 40px;
    background-color: #333;
    text-align: center;
    font-size: 0.7rem;
    text-decoration: none;
    color: #fff;
}
.page-heading .page-heading-back {
    display: block;
    overflow: hidden;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 5px;
    margin: auto 0;
    width: 30px;
    height: 30px;
    text-align: left;
    text-indent: 100%;
    line-height: 30px;
}
.page-heading .page-heading-back:before {
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 8px;
    height: 8px;
    border-top: 1px solid #fff;
    border-left: 1px solid #fff;
}
#contents .section-block {
    padding: 20px 10px 0;
}
#contents .about-payment {
    background-image: url({{ app.config.front_urlpath }}/img/sp/guide/icon-currency.png?1461059863);
    background-size: 13px auto;
    padding-left: 30px;
}
#contents .section-heading {
    padding: 6px 0;
    background: #eee;
    font-size: 1.1rem;
    font-weight: bold;
    background-repeat: no-repeat;
    background-position: 10px center;
}
#contents .text {
    margin-top: 12px;
    font-size: 1rem;
}
#contents .table-pat1 {
    width: 100%;
    margin-top: 12px;
    border: 1px solid #ddd;
}
#contents .table-pat1 th {
    background: #eee;
}

#contents .table-pat1 th, #contents .table-pat1 td {
    padding: 10px;
    border: 1px solid #ddd;
    font-size: 1rem;
}
#contents .table-pat1 th, #contents .table-pat1 td {
    padding: 10px;
    border: 1px solid #ddd;
    font-size: 1rem;
}
#contents .table-pat1 .image {
    margin-top: 3px;
}
#contents .about-delivery {
    background-image: url({{ app.config.front_urlpath }}/img/sp/guide/icon-truck.png?1461059861);
    background-size: 27px auto;
    padding-left: 44px;
}
#contents .catution-text {
    margin-top: 12px;
    padding-left: 10px;
    font-size: 1rem;
}
#contents .catution-text li {
    text-indent: -1em;
}
#contents .about-business-time {
    background-image: url({{ app.config.front_urlpath }}/img/sp/guide/icon-clock.png?1461059861);
    background-size: 18px auto;
    padding-left: 35px;
}
#contents .site-features {
    margin-top: 8px;
    padding: 8px 0;
    text-align: center;
    font-size: 1.4rem;
    font-weight: bold;
    border: 2px solid #333;
}
#contents .about-cancel {
    background-image: url({{ app.config.front_urlpath }}/img/sp/guide/icon-cancel.png?1461119676);
    background-size: 14px auto;
    padding-left: 32px;
}


/* ======== /SP ==========*/


</style>
