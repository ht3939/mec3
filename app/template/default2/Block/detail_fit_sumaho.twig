{% block stylesheet %}
<style type="text/css">
/* ======== PC ==========*/
.item-dtl-sim {
	width: 1000px;
	margin-bottom: 65px;
	background: #fff;
}
.item-dtl-sim dt {
	border-top: 5px solid #333;
	border-bottom: 1px solid #ccc;
	padding: 15px 20px;
	font-size: 22px;
	font-weight: bold;
	color: #232f3e;
	line-height: 1;
}
.item-dtl-sim dd {
	padding: 25px 30px 30px;
}
.item-dtl-sim dd p {
	margin-bottom: 20px;
}
.item-dtl-sim dd table {
	width: 100%;
	letter-spacing: 0;
}
.item-dtl-sim dd table tbody tr:nth-child(even) {
	background: #fef5f4;
}
.item-dtl-sim dd table thead th {
	padding: 12px 0;
	background: #333;
	color: #fff;
	border-left: 1px solid #fff;
	font-size: 14px;
	text-align: center;
}
.item-dtl-sim dd table thead th.btn_fit {
	width: 145px;
}
.item-dtl-sim dd table tbody td.dtl-img {
	width: 55px;
	padding: 10px 0 10px 10px;
}
.item-dtl-sim dd table tbody td {
	text-align: center;
	padding: 10px;
}
.item-dtl-sim dd table tbody td.dtl-img img {
	width: 100%;
}
.item-dtl-sim dd table tbody td img {
	float: left;
	margin-right: 5px;
}
.item-dtl-sim dd table tbody td span {
	font-size: 11px;
	display: block;
	text-align: left;
}
.item-dtl-sim dd table tbody td .btn-dtl-sim-outer {
	background-image: url(data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiBlbmNvZGluZz0idXRmLTgiP…dpZHRoPSIxMDAlIiBoZWlnaHQ9IjEwMCUiIGZpbGw9InVybCgjZ3JhZCkiIC8+PC9zdmc+IA==);
	background-size: 100%;
	background-image: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #ffa51d),color-stop(100%, #ff912e));
	background-image: -moz-linear-gradient(#ffa51d,#ff912e);
	background-image: -webkit-linear-gradient(#ffa51d,#ff912e);
	background-image: linear-gradient(#ffa51d,#ff912e);
	display: inline-block;
	margin-bottom: 5px;
	border-radius: 3px;
}
.item-dtl-sim dd p {
	margin-bottom: 20px;
}
.item-dtl-sim dd table tbody td .btn-dtl-sim {
	width: 125px;
	padding: 10px 0 10px 20px;
	font-family: "メイリオ", sans-serif;
	font-size: 12px;
	color: #fff;
	font-weight: bold;
	border: none;
	box-shadow: none;
	line-height: 1;
	cursor: pointer;
	display: block;
	background: transparent url({{ app.config.front_urlpath }}/img/product/icon-cart-sim.png?1468475547) no-repeat 9px center;
}
.item-dtl-sim dd table tbody td a {
	text-decoration: underline;
	font-size: 11px;
	color: #3243c2;
}
.item-dtl-sim dd table tbody .btn-detail {
    display: block;
    /* width: 98px; */
    padding: 5px 0;
    text-align: center;
    margin: 0 auto;
    border: 1px solid #df8900;
    color: #fff;
    font-weight: bold;
    font-size: 13px;
    background: url(data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiBlbmNvZGluZz0idXRmLTgiP…dpZHRoPSIxMDAlIiBoZWlnaHQ9IjEwMCUiIGZpbGw9InVybCgjZ3JhZCkiIC8+PC9zdmc+IA==);
    background: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #ffa51d),color-stop(100%, #ff922d));
    background: -moz-linear-gradient(#ffa51d,#ff922d);
    background: -webkit-linear-gradient(#ffa51d,#ff922d);
    background: linear-gradient(#ffa51d,#ff922d);
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    transition: all 0.2s ease 0s;
    text-decoration:none;
}
/* ======== /PC ==========*/

/* ======== SP ==========*/
.item-inf .inf-content {
    padding: 0 10px;
    border-top: 2px solid #ccc;
}
.item-inf .inf-content h2 {
    padding: 10px 0;
    font-size: 1.5rem;
    font-weight: bold;
    border-bottom: 1px solid #ccc;
    margin-bottom: 10px;
}
.item-inf #sim .sim-num {
    font-size: 1rem;
    margin-bottom: 15px;
}
.item-inf #sim .sim-num span {
    font-size: 1.5rem;
    font-weight: bold;
    color: #da0d0d;
}
.item-inf #sim .sim-list>ul {
    overflow: hidden;
}
.item-inf #sim .sim-list>ul>li {
    float: left;
    width: 50%;
    padding-bottom: 20px;
    font-size: 1rem;
}
.item-inf #sim .sim-list a {
    display: block;
    text-decoration: none;
    color: #333;
}
.item-inf #sim .sim-list .tag-list {
    overflow: hidden;
}
.item-inf #sim .sim-list .brand, .item-inf #sim .sim-list .ttl, .item-inf #sim .sim-list .capa, .item-inf #sim .sim-list .price {
    padding-right: 15px;
}
.item-inf #sim .sim-list .ttl {
    color: #3243c2;
    text-decoration: underline;
    margin-bottom: 5px;
    padding-top: 8px;
}
.item-inf #sim .sim-list .brand, .item-inf #sim .sim-list .ttl, .item-inf #sim .sim-list .capa, .item-inf #sim .sim-list .price {
    padding-right: 15px;
}
.item-inf #sim .sim-list .capa {
    color: #666;
    margin-bottom: 5px;
}
.item-inf #sim .sim-list .tag-list li {
    padding: 1px 3px;
    border: 1px solid #ccc;
    background: #ececec;
    float: left;
    margin: 0 3px 3px 0;
    font-size: 1rem;
    font-weight: normal;
}
.item-inf #sim .sim-list .image img {
    width: 100%;
    height: auto;
}
.item-inf #sim .sim-list .price span {
    color: #da0d0d;
    font-weight: bold;
}
.item-inf #sim .btn-show {
    background-image: url(data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiBlbmNvZGluZz0idXRmLTgiP…dpZHRoPSIxMDAlIiBoZWlnaHQ9IjEwMCUiIGZpbGw9InVybCgjZ3JhZCkiIC8+PC9zdmc+IA==);
    background-size: 100%;
    background-image: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #ffffff),color-stop(100%, #eeeeee));
    background-image: -moz-linear-gradient(#ffffff,#eeeeee);
    background-image: -webkit-linear-gradient(#ffffff,#eeeeee);
    background-image: linear-gradient(#ffffff,#eeeeee);
    width: 76%;
    margin: 0 auto;
    padding: 12px 0;
    text-align: center;
    font-size: 1.2rem;
    font-weight: bold;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin-bottom: 40px;
    position: relative;
}
.item-inf #sim .btn-show:after {
    position: absolute;
    content: '';
    position: absolute;
    content: '';
    border-top: 8px solid #1d2733;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-bottom: 8px solid transparent;
    right: 18px;
    top: 50%;
    margin-top: -4px;
}
.item-inf .more {
    display: none;
}


/* ======== /SP ==========*/


</style>
{% endblock %}

<!-- =============== PC =============== -->
{% if matchs_product %}
<dl class="item-dtl-sim pc">
	<dt>対応するSIMカード</dt>
	<dd>
		<p>{{ __EX_PRODUCT_MAKER.name }} {{ Product.name }}に対応しているSIMカード一覧です。こちらで掲載しているSIMカードは周波数などの情報をもとにしています。そのため地域や端末の特性によっては使用できない場合もございます。当方で動作を保証するものではございませんのでご了承下さい。ご購入前には必ず販売元へご確認下さいますようお願い致します。</p>
		<table>
			<thead>
				<tr>
					<th colspan="2">製品名</th>
					<th>月額料金(税抜)</th>
					<th>データ容量</th>
					<th>通信速度(下り)</th>
					<th>音声通話</th>
					<th class="btn_fit">ご購入</th>
				</tr>
			</thead>
			<tbody>
			{% for mProduct in matchs_product %}

				{# 
				「月額料金」と「一括料金」の一番安い「販売価格」を取得
				 #}
				{% set m_sales_price_bulk = null %}
				{% set m_sales_price_month = null %}
				{% for ProductClass in mProduct.ProductClasses %}
				    {% if (ProductClass.ClassCategory2.id == 9) %}
				        {# 月額払い #}
				        {% if (m_sales_price_month > ProductClass.Price02 or m_sales_price_month == null) %}
				        {% set m_sales_price_month = ProductClass.Price02 %}
				        {% endif %}
				    {% elseif (ProductClass.ClassCategory2.id == 10) %}
				        {#  一括払い #}
				        {% if (m_sales_price_bulk > ProductClass.Price02 or m_sales_price_bulk == null) %}
				        {% set m_sales_price_bulk = ProductClass.Price02 %}
				        {% endif %}
				    {% endif %}
				{% endfor %}

				<tr>
					<td class="dtl-img">
						<img src="{{ app.config.image_save_urlpath }}/{{ mProduct.ProductImage.0|no_image_product }}" alt="{{ matchs_info_maker[mProduct.id].name }} {{ mProduct.name }}" />
					</td>
					<td class="item-name">
						<span>{{ matchs_info_maker[mProduct.id].name }}</span>
						{{ mProduct.name }}
					</td>
					<td>{{ m_sales_price_month }}円</td>
					<td>{{ matchs_info[mProduct.id].3.valuetext }}/月</td>
					<td>{{ matchs_info[mProduct.id].36.valuetext }}</td>
					<td>×</td>
					<td>
						<a class="btn-detail" href="{{ url('product_detail', {'id': mProduct.id}) }}">詳細を見る</a>
					</td>
				</tr>
			{% endfor %}

			</tbody>
		</table>
		<!-- <p class="simlist-show js-simlist-show">もっと見る</p> -->
	</dd>
</dl>
{% endif %}
<!-- =============== /PC =============== -->

<!-- =============== SP =============== -->
{% if matchs_product %}
<div class="item-inf sp">
	<div id="sim" class="inf-content js-scroll-referer-for-follow-header-navigation">
		<h2>対応SIMカード</h2>
		<p class="sim-num">全<span>{{ matchs_product|length }}</span>製品</p>
		{% for key, mProduct in matchs_product %}
		{% if (key == 0) %}
		<div class="sim-list">
			<ul>
		{% endif %}

				{# 
				「月額料金」と「一括料金」の一番安い「販売価格」を取得
				 #}
				{% set m_sales_price_bulk = null %}
				{% set m_sales_price_month = null %}
				{% for ProductClass in mProduct.ProductClasses %}
				    {% if (ProductClass.ClassCategory2.id == 9) %}
				        {# 月額払い #}
				        {% if (m_sales_price_month > ProductClass.Price02 or m_sales_price_month == null) %}
				        {% set m_sales_price_month = ProductClass.Price02 %}
				        {% endif %}
				    {% elseif (ProductClass.ClassCategory2.id == 10) %}
				        {#  一括払い #}
				        {% if (m_sales_price_bulk > ProductClass.Price02 or m_sales_price_bulk == null) %}
				        {% set m_sales_price_bulk = ProductClass.Price02 %}
				        {% endif %}
				    {% endif %}
				{% endfor %}

				<li>
					<a href="{{ url('product_detail', {'id': mProduct.id}) }}">
						<ul class="tag-list">
							<li>音声通話</li>
						</ul>
						<div class="image"><img src="{{ app.config.image_save_urlpath }}/{{ mProduct.ProductImage.0|no_image_product }}" alt="{{ matchs_info_maker[mProduct.id].name }} {{ mProduct.name }}"></div>
						<p class="brand js-available-product-brand">{{ matchs_info_maker[mProduct.id].name }}</p>
						<p class="ttl js-available-product-product-name">{{ mProduct.name }}</p>
						<p class="capa js-available-product-product-capacity">容量｜{{ matchs_info[mProduct.id].3.valuetext }}</p>
						<p class="price js-available-product-product-price">月額料金:<span>{{ m_sales_price_month }}</span>円</p>
					</a>
				</li>


		{% if (key == matchs_product|length) %}
			</ul>
		</div>
		{% elseif (key == 3) %}
			</ul>
		</div>
		<p class="btn-show js-more-handle">すべての製品を見る</p>
		<div class="sim-list more js-more-target">
			<ul>
		{% endif %}

		{% endfor %}

	</div>
</div>
{% endif %}
<!-- =============== /SP =============== -->
