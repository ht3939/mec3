{% extends 'default_frame.twig' %}

{% set body_class = 'product_page' %}

{% if CategoryParam %}
{% block site_canonical %}
<link rel="canonical" href="{{app.request.getSchemeAndHttpHost()}}{{app.request.getPathInfo()}}?category_id={{CategoryParam}}" >
{% endblock %}
{% block site_og_url %}
    <meta property="og:url" content="{{app.request.getSchemeAndHttpHost()}}{{app.request.getPathInfo()}}?category_id={{CategoryParam}}">
{% endblock %}

{% endif %}


{% block javascript %}
    <script>
        // 並び順を変更
        function fnChangeOrderBy(orderby) {
            eccube.setValue('orderby', orderby);
            eccube.setValue('pageno', 1);
            eccube.submitForm();
        }

        // 表示件数を変更
        function fnChangeDispNumber(dispNumber) {
            eccube.setValue('disp_number', dispNumber);
            eccube.setValue('pageno', 1);
            eccube.submitForm();
        }
        // 商品表示BOXの高さを揃える
        $(window).load(function() {
            $('.product_item').matchHeight();
        });
    </script>
{% endblock %}

{% block stylesheet %}
<style type="text/css">
.col-sm-3.col-xs-6 .td-inf{
    font-size: 14px;
    font-weight: bold;
}
.col-sm-3.col-xs-6 .td-inf span {
    font-size: 11px;
    display: block;
    font-weight: normal;
    margin-bottom: 5px;
}
#item_list.main_list .col-sm-3.col-xs-6 .item_name{
    height: 60px;
}
#item_list.main_list .col-sm-3.col-xs-6 .item_name span{
    height:15px;
}
#item_list.main_list .col-sm-3.col-xs-6 .item_price {
    font-size:13px;
    margin: 8px 0px;
    font-weight:normal;
}
#item_list.main_list .col-sm-3.col-xs-6 .item_price span {
    color: #ed0505;
    font-size: 20px;
    font-weight: bold;
    font-family: Helvetica, Arial, sans-serif;
}
#item_list.main_list .col-sm-3.col-xs-6 .tag-list {
    display: block;
    height: 26px;
    font-weight:normal;
}
#item_list.main_list .col-sm-3.col-xs-6 .td-spec dt {
    font-size: 13px;
    width: 5.5em;
    float: left;
    clear: both;
    font-weight: bold;
    color: #333;
}
#item_list.main_list .col-sm-3.col-xs-6 .td-spec dd {
    font-size: 13px;
    padding-bottom: 6px;
    color: #333;
    /*height: 24px;*/
}
#item_list.main_list .col-sm-3.col-xs-6 .btn-detail {
    display: block;
    /*width: 98px;*/
    padding: 5px 0;
    text-align: center;
    margin: 0 auto;
    border: 1px solid #df8900;
    color: #fff;
    font-weight: bold;
    font-size: 13px;
    background: url(data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiBlbmNvZGluZz0idXRmLTgiP…dpZHRoPSIxMDAlIiBoZWlnaHQ9IjEwMCUiIGZpbGw9InVybCgjZ3JhZCkiIC8+PC9zdmc+IA==);
    background: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #ffa51d),color-stop(100%, #ff922d));
    background: -moz-linear-gradient(#ffa51d,#ff922d);
    background: -webkit-linear-gradient(#ffa51d,#ff922d);
    background: linear-gradient(#ffa51d,#ff922d);
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    transition: all 0.2s ease 0s;
}

</style>
{% endblock %}


{% block main %}

    <form name="form1" id="form1" method="get" action="?">
        {{ form_widget(search_form) }}
    </form>
    <!-- ▼topicpath▼ -->
    <div id="topicpath" class="row">
        <ol id="list_header_menu">
            <li><a href="{{ url('product_list') }}">全商品</a></li>
            {% if Category is not null %}
                {% for Path in Category.path %}
                    <li><a href="{{ url('product_list') }}?category_id={{ Path.id }}">{{ Path.name }}</a></li>
                {% endfor %}
            {% endif %}
            {% if search_form.vars.value.name %}
            <li>「{{ search_form.vars.value.name }}」の検索結果</li>
            {% endif %}
        </ol>
    </div>
    <!-- ▲topicpath▲ -->
    <div id="result_info_box" class="row">
        <form name="page_navi_top" id="page_navi_top" action="?">
            <p id="result_info_box__item_count" class="intro col-sm-6"><strong><span id="productscount">{{ pagination.totalItemCount }}</span>件</strong>の商品がみつかりました。
            </p>

            <div id="result_info_box__menu_box" class="col-sm-6 no-padding">
                <ul id="result_info_box__menu" class="pagenumberarea clearfix">
                    <li id="result_info_box__disp_menu">
                        {{ form_widget(disp_number_form, {'id': '', 'attr': {'onchange': "javascript:fnChangeDispNumber(this.value);"}}) }}
                    </li>
                    <li id="result_info_box__order_menu">
                        {{ form_widget(order_by_form, {'id': '', 'attr': {'onchange': "javascript:fnChangeOrderBy(this.value);"}}) }}
                    </li>
                </ul>
            </div>

            {% for f in disp_number_form.getIterator %}
                {% if f.vars.name matches '[^plg*]' %}
                    {{ form_label(f) }}
                    {{ form_widget(f) }}
                    {{ form_errors(f) }}
                {% endif %}
            {% endfor %}

            {% for f in order_by_form.getIterator %}
                {% if f.vars.name matches '[^plg*]' %}
                    {{ form_label(f) }}
                    {{ form_widget(f) }}
                    {{ form_errors(f) }}
                {% endif %}
            {% endfor %}


        </form>
    </div>

    <!-- ▼item_list▼ -->
    <div id="item_list" class="main_list">
        <div class="row no-padding">
            {% for Product in pagination %}
                <div id="result_list_box--{{ Product.id }}" class="col-sm-3 col-xs-6">
                    <div id="result_list__item--{{ Product.id }}" class="product_item">
                        <a href="{{ url('product_detail', {'id': Product.id}) }}">
                            <div id="result_list__image--{{ Product.id }}" class="item_photo">
                                <img src="{{ app.config.image_save_urlpath }}/{{ Product.main_list_image|no_image_product }}">
                            </div>
                            <dl id="result_list__detail--{{ Product.id }}">
                                <div class="td-inf">
                                    <dt id="result_list__name--{{ Product.id }}" class="item_name">
                                        <span>{{ __EX_PRODUCT_LIST_MAKER[Product.id].name }}</span>
                                        {{ Product.name }}
                                    </dt>
                                    <ul class="tag-list">
                                    {% for ProductTag in Product.ProductTag %}
                                        <li id="product_tag_box__product_tag--{{ ProductTag.Tag.id }}" class="product_tag_list">{{ ProductTag.Tag }}</li>
                                    {% endfor %}
                                    </ul>
                                    {% if Product.ProductClasses.0.ProductType.id == -1 %}
                                    <ul class="tag-list">
                                        <li class="product_tag_list">{% if __EX_PRODUCT_LIST[Product.id][app.config.product_ex_s_etc_voice].value == 'value1' %}音声通話{% else %}データ専用{% endif %}</li>
                                    </ul>
                                    {% endif %}
                                </div>
                                {% if Product.ProductClasses.0.ProductType.id == app.config.producttype_ex_sp_type %}
                                <dd id="result_list__price02_inc_tax--{{ Product.id }}" class="item_price">
                                    月々 <span class="price-num">{{ Product.getPrice02Min|number_format }}円</span> (税抜)<br>分割24回
                                </dd>

                                <div class="td-spec">
                                    <dl>
                                        <dt>O　　S</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id].12.valuetext }}</dd>
                                        <dt>液　　晶</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id].17.valuetext }}</dd>
                                        <dt>カ  メ  ラ</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id].19.valuetext }}</dd>
                                        <dt>電池容量</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id].21.valuetext }}</dd>
                                    </dl>
                                </div>

                                {% else %}
                                <dd id="result_list__price02init_inc_tax--{{ Product.id }}" class="item_price">
                                    初期費用 <span class="price-num">{{ __EX_PRODUCT_LIST[Product.id][app.config.product_ex_s_init_price].valuetext|number_format }}円</span> (税抜)
                                </dd>                                <dd id="result_list__price02_inc_tax--{{ Product.id }}" class="item_price">
                                    月額 <span class="price-num">{{ Product.getPrice02Min|number_format }}円/月</span> (税抜)
                                </dd>

                                <div class="td-spec">
                                    <dl>
                                        <dt>データ容量</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id][app.config.product_ex_s_data].valuetext }}</dd>
                                        <dt>通信速度</dt>
                                        <dd>{{ __EX_PRODUCT_LIST[Product.id][app.config.product_ex_s_speed_down].valuetext }}</dd>
                                    </dl>
                                </div>

                                {% endif %}

                                <a href="{{ url('product_detail', {'id': Product.id}) }}" class="btn-detail">詳細を見る</a>
                            </dl>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
    <!-- ▲item_list▲ -->
    {% if pagination.totalItemCount > 0 %}
        {% include "pagination.twig" with { 'pages' : pagination.paginationData } %}
    {% endif %}
{% endblock %}
