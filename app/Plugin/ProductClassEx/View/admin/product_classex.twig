$(function() {

    $("#thumb--{{ product_class_form.vars.name }}").sortable({
        cursor: 'move',
        opacity: 0.7,
        placeholder: 'ui-state-highlight',
        update: function (event, ui) {
            updateRank{{ product_class_form.vars.name }}();
        }
    });
    var proto_img = ''
            + '<li class="ui-state-default">'
            + '<img src="__path__" />'
            + '<a class="delete-image">'
            + '<svg class="cb cb-close">'
            + '<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#cb-close"></use>'
            + '</svg>'
            + '</a>'
            + '</li>';
    var proto_add = '{{ form_widget(product_class_form.add_images.vars.prototype) }}';
    var proto_del = '{{ form_widget(product_class_form.delete_images.vars.prototype) }}';
    //{{product_class_form.images.0.vars.name}}
    {% for image in product_class_form.vars.value.images %}
    //{{image}}
    var $img = $(proto_img.replace(/__path__/g, '{{ app.config.image_save_urlpath }}/{{ image.vars.value }}'));
    var $widget = $('{{ form_widget(image) }}');
    $widget.val('{{ image.vars.value }}');
    $("#thumb--{{ product_class_form.vars.name }}").append($img.append($widget));
    {% endfor %}

    {% for add_image in product_class_form.add_images %}
    var $img = $(proto_img.replace(/__path__/g, '{{ app.config.image_temp_urlpath }}/{{ add_image.vars.value }}'));
    var $widget = $('{{ form_widget(add_image) }}');
    $widget.val('{{ add_image.vars.value }}');
    $("#thumb--{{ product_class_form.vars.name }}").append($img.append($widget));
    {% endfor %}
    
    {% for delete_image in product_class_form.delete_images %}
    $("#thumb--{{ product_class_form.vars.name }}").append('{{ form_widget(delete_image) }}');
    {% endfor %}
    
    var hideSvg{{ product_class_form.vars.name }} = function () {
        if ($("#thumb--{{ product_class_form.vars.name }} li").length > 0) {
            $("#icon_no_image--{{ product_class_form.vars.name }}").css("display", "none");
        } else {
            $("#icon_no_image--{{ product_class_form.vars.name }}").css("display", "");
        }
    };
    var updateRank{{ product_class_form.vars.name }} = function () {
        $("#thumb--{{ product_class_form.vars.name }} li").each(function (index) {
            $(this).find(".rank_images").remove();
            filename = $(this).find("input[type='hidden']").val();
            $rank = $('<input type="hidden" class="rank_images" name="rank_images[]" />');
            $rank.val(filename + '//' + parseInt(index + 1));
            $(this).append($rank);
        });
    }
    hideSvg{{ product_class_form.vars.name }}();
    updateRank{{ product_class_form.vars.name }}();
    // 画像削除時
    var count_del = 0;
    $("#thumb--{{ product_class_form.vars.name }}").on("click", ".delete-image", function () {
        var $new_delete_image = $(proto_del.replace(/__name__/g, count_del));
        var src = $(this).prev().attr('src')
                .replace('{{ app.config.image_temp_urlpath }}/', '')
                .replace('{{ app.config.image_save_urlpath }}/', '');
        $new_delete_image.val(src);
        $("#thumb--{{ product_class_form.vars.name }}").append($new_delete_image);
        $(this).parent("li").remove();
        hideSvg{{ product_class_form.vars.name }}();
        updateRank{{ product_class_form.vars.name }}();
        count_del++;
    });
    var count_add = {{ product_class_form.add_images|length|default(0) }};
    $('#{{ product_class_form.product_image.vars.id }}').fileupload({
        url: "{{ url('admin_productclassex_image_add') }}",
        type: "post",
        dataType: 'json',
        done: function (e, data) {
            $('#progress--{{ product_class_form.vars.name }}').hide();
            $.each(data.result.files, function (index, file) {
                var path = '{{ app.config.image_temp_urlpath }}/' + file;
                var $img = $(proto_img.replace(/__path__/g, path));
                var $new_img = $(proto_add.replace(/__name__/g, count_add));
                $new_img.val(file);
                $child = $img.append($new_img);
                $('#thumb--{{ product_class_form.vars.name }}').append($child);
                count_add++;
            });
            hideSvg{{ product_class_form.vars.name }}();
            updateRank{{ product_class_form.vars.name }}();
        },
        fail: function (e, data) {
            alert('アップロードに失敗しました。');
        },
        always: function (e, data) {
            $('#progress--{{ product_class_form.vars.name }}').hide();
            $('#progress--{{ product_class_form.vars.name }} .progress-bar').width('0%');
        },
        start: function (e, data) {
            $('#progress--{{ product_class_form.vars.name }}').show();
        },
        acceptFileTypes: /(\.|\/)(gif|jpe?g|png)$/i,
        maxFileSize: 10000000,
        maxNumberOfFiles: 10,
        progressall: function (e, data) {
            var progress = parseInt(data.loaded / data.total * 100, 10);
            $('#progress--{{ product_class_form.vars.name }} .progress-bar').css(
                    'width',
                    progress + '%'
            );
        },
        processalways: function (e, data) {
            if (data.files.error) {
                alert("画像ファイルサイズが大きいか画像ファイルではありません。");
            }
        }
    });
    // 画像アップロード
    $('#file_upload--{{ product_class_form.vars.name }}').on('click', function () {
        $('#{{ product_class_form.product_image.vars.id }}').click();
    });
});
