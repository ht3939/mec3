{% extends 'default_frame.twig' %}

{% set menus = ['content', 'admin_abtestcfg'] %}

{% block title %}おすすめ商品管理{% endblock %}
{% block sub_title %}おすすめ商品内容設定{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ app.config.admin_urlpath }}/assets/css/bootstrap-datetimepicker.min.css">
{% endblock stylesheet %}

{% block javascript %}
<script src="{{ app.config.admin_urlpath }}/assets/js/vendor/moment.min.js"></script>
<script src="{{ app.config.admin_urlpath }}/assets/js/vendor/moment-ja.js"></script>
<script src="{{ app.config.admin_urlpath }}/assets/js/vendor/bootstrap-datetimepicker.min.js"></script>

{% endblock javascript %}

{% block main %}
<form name="search_form" id="search_form" method="post" action="">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-arrow">
                    <h3 class="box-title"><span class="normal"><strong>{{ totalItemCount }} 件</strong> が該当しました</span></h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="table_list">
                        <div class="table-responsive with-border">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>

                                    <th>abtestid</th>
                                    <th>enable</th>
                                    <th>headtags</th>
                                    <th>tagdevice</th>
                                    <th>conditions</th>
                                    <th>tagurl</th>
                                    <th>abrule</th>
                                    <th>aburl</th>
                                    <th>organic_flg</th>
                                    <th>rank</th>
                                    <th>編集</th>
                                    <th>削除</th>
                                    <th>並び替え</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ABTestCfgProduct in pagination %}
                                <tr>
                                    <td class="abtestcfg_product_id">{{ ABTestCfgProduct.id }}</td>
                                    <td class="abtestidentity">{{ ABTestCfgProduct.abtestidentity }}</td>
                                    <td class="enable_flg">{{ ABTestCfgProduct.enable_flg }}</td>
                                    <td class="headtags">{{ ABTestCfgProduct.headtags|nl2br }}</td>
                                    <td class="tagdevice">{{ ABTestCfgProduct.tagdevice }}</td>


                                    <td class="condition">{{ ABTestCfgProduct.conditions|nl2br }}</td>

                                    <td class="tagurl">{{ ABTestCfgProduct.tagurl }}</td>
                                    <td class="abrule">{{ ABTestCfgProduct.abrule }}</td>
                                    <td class="aburl">{{ ABTestCfgProduct.aburl }}</td>
                                    <td class="organic_flg">{{ ABTestCfgProduct.organic_flg }}</td>


                                    <td class="rank">{{ ABTestCfgProduct.rank }}</td>
                                    <td><a href="{{ url('admin_abtestcfg_edit', { id : ABTestCfgProduct.id }) }}" >編集</a></td>
                                    <td><a href="{{ url('admin_abtestcfg_delete', {'id' : ABTestCfgProduct.id}) }}" {{ csrf_token_for_anchor() }} data-method="delete" data-message="おすすめ情報を削除してもよろしいですか？">削除</a></td>
                                    <td class="icon_edit">
                                        <div class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown"><svg class="cb cb-ellipsis-h"> <use xlink:href="#cb-ellipsis-h" /></svg></a>
                                            <ul class="dropdown-menu dropdown-menu-right">
                                            {% if loop.first == false %}
                                                <li>
                                                    <a href="{{ url('admin_abtestcfg_rank_up', {id: ABTestCfgProduct.id}) }}"  {{ csrf_token_for_anchor() }} data-method="put" data-confirm="false">上へ</a>
                                                </li>
                                            {% endif %}
                                            {% if loop.last == false %}
                                                <li>
                                                    <a href="{{ url('admin_abtestcfg_rank_down', {id: ABTestCfgProduct.id}) }}"  {{ csrf_token_for_anchor() }} data-method="put" data-confirm="false">下へ</a>
                                                </li>
                                            {% endif %}
                                            </ul>
                                        </div>
                                    </td>
                               </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
        <a href="{{ url('admin_abtestcfg_new') }}" class="btn btn-primary btn-block btn-lg">ABテスト条件を新規登録</a>
    </div>
</div>
</form>
{% endblock %}